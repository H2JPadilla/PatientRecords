@model EL.PatientEntity
@{
    ViewBag.Title = "Add Prescription";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddPatient", "Patient", FormMethod.Post, new { id = "patientForm", @class = "needs-validation" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    @Html.Partial("Partial/PatientForm", Model)

    <div class="mt-3">
        <!-- data attributes are used by modal.js to show correct modal text -->
        <button type="button" id="btnSave" class="btn btn-success"
                data-modal-title="Confirm Save"
                data-modal-body="Are you sure you want to save this patient record?"
                data-modal-confirm-text="Yes, Save"
                data-modal-confirm-class="btn-success">
            Save
        </button>
        @Html.ActionLink("Cancel", "ViewPatient", "Patient", new { area = "Admin" }, new { @class = "btn btn-secondary" })
    </div>
}
