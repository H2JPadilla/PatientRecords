@model EL.PatientEntity

<div class="row mb-3">
    <div class="col-md-4">
        <label class="form-label">Patient</label>
        @Html.TextBoxFor(m => m.Patient, new { @class = "form-control", placeholder = "Enter patient name", required="required", id="Patient"})
        @Html.ValidationMessageFor(m => m.Patient, "", new { @class = "text-danger"})
    </div>

    <div class="col-md-4">
        <label class="form-label">DrugName</label>
        @Html.TextBoxFor(m => m.DrugName, new { @class = "form-control", placeholder = "Enter drug name", required = "required", id= "DrugName" })
        @Html.ValidationMessageFor(m => m.DrugName, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-4">
        <label class="form-label">Dosage</label>
        @Html.TextBoxFor(m => m.Dosage, new { @class = "form-control", required = "required", id="Dosage", type="number"})
        @Html.ValidationMessageFor(m => m.Dosage, "", new { @class = "text-danger" })
    </div>
</div>
