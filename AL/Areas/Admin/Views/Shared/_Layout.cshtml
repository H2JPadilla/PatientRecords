<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Areas/Admin/Content/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/CSS/footer.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Patient Records</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Prescriptions", "ViewPatient", "Patient", new { area = "Admin" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">@RenderBody()</div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - H2Software Consulting Services.</p>
            <small>All rights reserved.</small>
        </div>
    </footer>

    <script src="~/Areas/Admin/Content/JS/jquery-3.6.0.min.js"></script>
    <script src="~/Areas/Admin/Content/JS/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>